/* pages/cart/cart.wxss */
.cart-page {
  margin-top: 20%;
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f4f4f4;
}

.loading-placeholder {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 200px;
  color: #999;
}
.loading-spinner-local {
  width: 30px;
  height: 30px;
  border: 3px solid rgba(0,0,0,0.1);
  border-left-color: #1989fa;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 10px;
}
@keyframes spin {
  to { transform: rotate(360deg); }
}


.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
  flex-grow: 1;
}
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}
.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}
.go-shopping-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1989fa; /* 主题色 */
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.cart-list {
  flex-grow: 1;
  padding-bottom: 120rpx; /* 为底部操作栏留出空间 */
  box-sizing: border-box;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  margin: 20rpx 20rpx 0 20rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

.item-info {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0; /* 防止被压缩导致文字省略失效 */
}

.product-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.4;
  margin-bottom: 8rpx;
}
.item-specs {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}
.price-stock-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.product-price {
  font-size: 30rpx;
  color: #ff5050;
  font-weight: bold;
}
.product-stock {
    font-size: 22rpx;
    color: #aaa;
}
.product-stock.out-of-stock {
    color: #ff5050;
}


.item-actions {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-between;
  margin-left: 20rpx;
  flex-shrink: 0;
}

.quantity-modifier {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx; /* 与删除按钮的间距 */
}
.quantity-modifier .action-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 46rpx; /* 微调使文字居中 */
  text-align: center;
  border: 1rpx solid #eee;
  color: #555;
  font-size: 36rpx;
}
.quantity-modifier .action-btn.minus {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}
.quantity-modifier .action-btn.plus {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}
.quantity-modifier .action-btn.disabled {
  color: #ccc;
  background-color: #f9f9f9;
}
.quantity-input {
  width: 70rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 28rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  min-height: 50rpx; /* 确保input高度 */
  padding: 0; /* 移除默认padding */
}

.delete-btn {
  font-size: 24rpx;
  color: #999;
  padding: 5rpx 10rpx; /* 增加点击区域 */
}
.delete-btn:active {
    color: #ff5050;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20rpx 0 30rpx; /* 增加左边距给全选 */
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
}
.select-all-section {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}
.select-all-section .select-icon{
    /* 使用与列表项中相同的select-icon样式 */
    margin-right: 15rpx;
}

.total-summary {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 20rpx;
  flex-grow: 1; /* 占据剩余空间把结算按钮推到最右 */
  text-align: right; /* 确保文本右对齐 */
}
.total-amount {
  font-size: 28rpx;
  color: #333;
}
.amount-value {
  color: #ff5050;
  font-weight: bold;
  font-size: 32rpx;
}
.total-items-text {
    font-size: 24rpx;
    color: #999;
}

.checkout-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #1989fa;
  color: white;
  border-radius: 35rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0; /* 移除默认外边距 */
}
.checkout-btn.disabled {
  background-color: #c8c9cc;
  opacity: 0.7;
}