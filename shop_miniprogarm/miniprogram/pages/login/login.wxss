.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  margin: 80rpx 0 60rpx;
  color: #333;
}

.input {
  width: 100%;
  height: 90rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.btn {
  text-align:center;
  width: 100%;
  height: 90rpx;
  line-height: 30px;
  margin-top: 40rpx;
  background-color: #07c160;
}

.register-link {
  margin-top: 50rpx;
  font-size: 28rpx;
  color: #666;
}

.link-text {
  color: #07c160;
  font-weight: bold;
}