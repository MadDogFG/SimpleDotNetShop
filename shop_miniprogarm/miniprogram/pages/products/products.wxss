/* pages/products/products.wxss */
.product-list-page {
  background-color: #f4f4f4;
  min-height: 100vh;
}

.search-bar-container {
  background-color: #fff;
  padding: 15rpx 20rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.search-input {
  flex-grow: 1;
  height: 60rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
  margin-right: 15rpx;
}
.search-btn {
  background-color: #1989fa;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 25rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
}


.loading-placeholder, .empty-products {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 200rpx; /* 调整使其在页面中部 */
  color: #999;
}
.loading-spinner-local {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(0,0,0,0.1);
  border-left-color: #1989fa;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 15rpx;
}
.loading-spinner-local.small {
    width: 30rpx;
    height: 30rpx;
    border-width: 3rpx;
}
@keyframes spin {
  to { transform: rotate(360deg); }
}
.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  opacity: 0.7;
}
.empty-text {
  font-size: 28rpx;
  color: #aaa;
  margin-bottom: 30rpx;
}
.retry-btn {
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background-color: #1989fa;
  color: white;
  border-radius: 35rpx;
}


.products-grid-scroll {
  box-sizing: border-box;
}
.products-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx; /* 商品间距 */
  padding: 15rpx;
}

.product-item-user {
  background-color: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
  display: flex;
  flex-direction: column;
}
.product-item-user.placeholder { /* 用于占位的空项，保持网格结构 */
    background-color: transparent;
    box-shadow: none;
}


.product-image-user {
  width: 100%;
  /* height: 220rpx; */ /* 固定高度或使用aspect-ratio */
  aspect-ratio: 2/3; /* 图片1:1比例 */
  background-color: #f0f0f0;
}

.product-info-user {
  padding: 10rpx 15rpx 15rpx 15rpx;
  display: flex;
  flex-direction: column;
  flex-grow: 1; /* 确保info区域能撑开 */
}

.product-name-user {
  font-size: 30rpx;
  color: #333;
  line-height: 3;
  font-weight: bold;
  height: calc(1.4em * 2); /* 限制两行的高度 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: auto; /* 将名字推到顶部，价格和按钮推到底部 */
}

.product-price-cart-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.product-price-user {
  flex: 2;
  font-size: 30rpx;
  color: #ff5050;
  font-weight: bold;
}
.add-to-cart-btn-user {
  flex: 1;
  box-shadow: grey;
  height: 35rpx;
  padding: 0;
  margin-left: 0;
  border: none;
  background-color: rgba(158, 0, 0, 0.788);
  display: flex;
  justify-content:center;
  align-items: center;
}
.add-to-cart-btn-user text{
  font-size: 25rpx;
  color: white;
}
.add-to-cart-btn-user::after { /* 移除按钮默认边框 */
  border: none;
}

.loading-spinner-btn { /* 按钮内的小loading */
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid rgba(25, 137, 250, 0.2); /* 主题色变淡 */
  border-left-color: #1989fa; /* 主题色 */
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
}
.out-of-stock-tag-user {
    font-size: 22rpx;
    color: #aaa;
    background-color: #f0f0f0;
    padding: 4rpx 8rpx;
    border-radius: 6rpx;
}


.load-more-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #999;
}
.load-more-indicator .loading-spinner-local {
    margin-right: 10rpx;
}

.back-to-top-btn {
  position: fixed;
  right: 30rpx;
  bottom: 100rpx; /* 根据是否有tabBar调整 */
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  /* background-color: rgba(0,0,0,0.5); */
  /* padding: 10rpx; */
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}